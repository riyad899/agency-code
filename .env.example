# Server Configuration
PORT=4000
FRONTEND_URL=http://localhost:3000

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here

# Authentication
JWT_SECRET=your-jwt-secret-key-here
ADMIN_SECRET=your-admin-secret-key-here

# MongoDB Database
# Primary connection string (SRV format - recommended)
MONGODB_URI=your_mongodb_connection_string_here

# Fallback connection string (Standard format - optional but recommended)
# Use this if you experience DNS/SRV resolution issues with Node.js v18+
# Get this from MongoDB Atlas: Connect > Drivers > Standard Connection String
# MONGODB_URI_FALLBACK=mongodb://host1:27017,host2:27017,host3:27017/agency-db?replicaSet=atlas-xxxxx-shard-0&ssl=true&authSource=admin

# Email Configuration (SMTP) - Using Nodemailer
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM_NAME=Your App Name
SMTP_FROM_EMAIL=your_email@gmail.com

# Firebase Service Account (for Production/Vercel)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}
